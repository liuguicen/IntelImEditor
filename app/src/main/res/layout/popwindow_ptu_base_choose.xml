<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/ptu_choose_base_height">
    <!--   android:layout_height="@dimen/ptu_choose_base_height"
            必须这样写， 不然adpater里面获取不到高，导致结果出错-->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/ptu_pic_resources_choose_rv"
        android:layout_width="0dp"
        android:layout_height="@dimen/ptu_choose_base_height"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/ptu_pic_resources_choose_more" />

    <ImageView
        android:id="@+id/ptu_pic_resources_choose_more"
        android:layout_width="30dp"
        android:layout_height="match_parent"
        android:layout_margin="0dp"
        android:background="#eeeeee"
        android:gravity="center"
        android:minHeight="0dp"
        android:padding="0dp"
        android:paddingStart="4dp"
        android:paddingLeft="4dp"
        android:paddingEnd="3dp"
        android:paddingRight="4dp"
        android:src="@mipmap/ptu_pic_resources_choose_more"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/ptu_pic_resources_choose_rv"
        app:layout_constraintRight_toRightOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>