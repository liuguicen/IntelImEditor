    android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_chang_face_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableEnd="@drawable/navigate_next"
        android:drawableRight="@drawable/navigate_next"
        android:gravity="start|center"
        android:paddingStart="@dimen/dp_16"
        android:paddingTop="12dp"
        android:paddingEnd="@dimen/dp_16"
        android:paddingBottom="12dp"
        android:text="@string/expression_change_face"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_18" />

    <TextView
        android:id="@+id/change_face_new_notice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|right"
        android:layout_marginEnd="@dimen/dp_48"
        android:layout_marginRight="@dimen/dp_48"
        android:background="@drawable/bg_hot_dot"
        android:gravity="center"
        android:paddingStart="@dimen/dp_4"
        android:paddingTop="@dimen/dp_2"
        android:paddingEnd="@dimen/dp_4"
        android:paddingBottom="@dimen/dp_2"
