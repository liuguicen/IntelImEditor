<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".user.userVip.PayProblemMeasureActivity">

    <include
        android:id="@+id/ppm_toolbar_layout"
        layout="@layout/include_toolbar" />

    <TextView
        android:layout_marginHorizontal="8dp"
        android:layout_marginTop="16dp"
        android:id="@+id/measure_content_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/measures_when_user_pay_but_open_failed"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ppm_toolbar_layout"
        android:textSize="16sp"/>

    <TextView
        android:layout_marginHorizontal="8dp"
        android:id="@+id/user_id_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/please_copy_the_id"
        android:layout_marginTop="24dp"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/measure_content_tv" />

    <TextView
        android:layout_marginHorizontal="8dp"
        android:id="@+id/tv_show_user_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/user_id_title"
        android:inputType="none"
        android:textIsSelectable="true"
        android:textSize="18sp"/>
</androidx.constraintlayout.widget.ConstraintLayout>