<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:slideswitch="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="  粗体"
            android:textColor="@color/base_text_color1"
            android:textSize="10pt" />

        <com.mandi.intelimeditor.common.view.MySwitchButton
            android:id="@+id/switch_button_bold"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_20"
            slideswitch:isOpen="false"
            slideswitch:shape="circle"
            slideswitch:themeColor="@color/button_color_switch" />
    </LinearLayout>
    <!--设置斜体-->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView

            android:id="@+id/text_italic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="  斜体"
            android:textColor="@color/base_text_color1"
            android:textSize="10pt" />

        <com.mandi.intelimeditor.common.view.MySwitchButton
            android:id="@+id/switch_button_text_italic"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_20"
            slideswitch:isOpen="false"
            slideswitch:shape="circle"
            slideswitch:themeColor="@color/button_color_switch" />
    </LinearLayout><!--设置斜体-->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_shadow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="  阴影"
            android:textColor="@color/base_text_color1"
            android:textSize="10pt" />

        <com.mandi.intelimeditor.common.view.MySwitchButton
            android:id="@+id/switch_button_text_shadow"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_20"
            slideswitch:isOpen="false"
            slideswitch:shape="circle"
            slideswitch:themeColor="@color/button_color_switch" />
    </LinearLayout>
</LinearLayout>