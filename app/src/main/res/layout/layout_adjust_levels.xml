<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center">

    <com.mandi.intelimeditor.ptu.view.MRangeSeekBar
        android:id="@+id/levels_range_seek_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:paddingHorizontal="4dp"
        app:rsb_gravity="center"
        app:rsb_indicator_show_mode="alwaysShow"
        app:rsb_max="255"
        app:rsb_min="0"
        app:rsb_progress_color="@color/amber"
        app:rsb_progress_height="4dp"
        app:rsb_thumb_drawable="@drawable/huaji"
        app:rsb_indicator_background_color="@color/white"
        app:rsb_indicator_text_color="@color/text_checked_color"/>
</FrameLayout>