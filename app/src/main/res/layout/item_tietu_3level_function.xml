<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/tietu_3_level_function_icon"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:padding="8dp"
        android:layout_margin="5dp"
        android:src="@mipmap/synthesis"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tietu_3_level_function_name"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/base_text_color1"
        android:textSize="@dimen/text_size_middle_x"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/tietu_3_level_function_icon"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="功能" />

</androidx.constraintlayout.widget.ConstraintLayout>